<Window x:Class="VPetLLM.winSettingNew"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VPetLLM"
        mc:Ignorable="d"
        Title="VPetLLM Settings" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <Label Content="LLM Provider"/>
            <ComboBox x:Name="ComboBox_Provider" Margin="0,0,0,10" SelectionChanged="ComboBox_Provider_SelectionChanged"/>
            <Button Content="Save" HorizontalAlignment="Right" Click="Button_Save_Click"/>
        </StackPanel>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <GroupBox x:Name="Grid_Ollama" Header="Ollama Settings" Visibility="Collapsed">
                    <StackPanel>
                        <Label Content="URL"/>
                        <TextBox x:Name="TextBox_OllamaUrl"/>
                        <Label Content="Model"/>
                        <ComboBox x:Name="ComboBox_OllamaModel"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox x:Name="Grid_OpenAI" Header="OpenAI Settings" Visibility="Collapsed">
                    <StackPanel>
                        <Label Content="API Key"/>
                        <TextBox x:Name="TextBox_OpenAIApiKey"/>
                        <Label Content="Model"/>
                        <TextBox x:Name="TextBox_OpenAIModel"/>
                        <Label Content="API Url"/>
                        <TextBox x:Name="TextBox_OpenAIUrl"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox x:Name="Grid_Gemini" Header="Gemini Settings" Visibility="Collapsed">
                    <StackPanel>
                        <Label Content="API Key"/>
                        <TextBox x:Name="TextBox_GeminiApiKey"/>
                        <Label Content="Model"/>
                        <TextBox x:Name="TextBox_GeminiModel"/>
                        <Label Content="API Url"/>
                        <TextBox x:Name="TextBox_GeminiUrl"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <GroupBox Header="Logs" Grid.Row="1" Margin="0,10,0,0">
                <ListBox x:Name="LogBox"/>
            </GroupBox>
        </Grid>
    </Grid>
</Window>