<Window x:Class="VPetLLM.winSettingNew"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VPetLLM"
        mc:Ignorable="d"
        Title="VPetLLM Settings" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="LLM Provider" Grid.Row="0" Grid.Column="0"/>
        <ComboBox x:Name="ComboBox_Provider" Grid.Row="0" Grid.Column="1" Margin="5" SelectionChanged="ComboBox_Provider_SelectionChanged"/>

        <Grid x:Name="Grid_Ollama" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Visibility="Collapsed">
            <Label Content="URL"/>
            <TextBox x:Name="TextBox_OllamaUrl" Margin="100,10,0,0" HorizontalAlignment="Left" Width="200"/>
            <Label Content="Model" Margin="0,40,0,0"/>
            <ComboBox x:Name="ComboBox_OllamaModel" Margin="100,40,0,0" HorizontalAlignment="Left" Width="200"/>
        </Grid>

        <Grid x:Name="Grid_OpenAI" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Visibility="Collapsed">
            <Label Content="API Key"/>
            <TextBox x:Name="TextBox_OpenAIApiKey" Margin="100,10,0,0" HorizontalAlignment="Left" Width="200"/>
            <Label Content="Model" Margin="0,40,0,0"/>
            <TextBox x:Name="TextBox_OpenAIModel" Margin="100,40,0,0" HorizontalAlignment="Left" Width="200"/>
            <Label Content="API Url" Margin="0,70,0,0"/>
            <TextBox x:Name="TextBox_OpenAIUrl" Margin="100,70,0,0" HorizontalAlignment="Left" Width="200"/>
        </Grid>

        <Grid x:Name="Grid_Gemini" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Visibility="Collapsed">
            <Label Content="API Key"/>
            <TextBox x:Name="TextBox_GeminiApiKey" Margin="100,10,0,0" HorizontalAlignment="Left" Width="200"/>
            <Label Content="Model" Margin="0,40,0,0"/>
            <TextBox x:Name="TextBox_GeminiModel" Margin="100,40,0,0" HorizontalAlignment="Left" Width="200"/>
        </Grid>
        
        <Label Content="Logs" Grid.Row="2" Grid.Column="0"/>
        <ListBox x:Name="LogBox" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="5"/>

        <Button Content="Save" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="Button_Save_Click"/>
    </Grid>
</Window>