<Window x:Class="VPetLLM.winSettingNew"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VPetLLM"
        mc:Ignorable="d"
        Title="VPetLLM" Height="640" Width="800">
    <Grid Margin="10">
        <TabControl>
            <TabItem Header="LLM设置">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,0,10,0">
                            <Label Content="LLM 提供商"/>
                            <ComboBox x:Name="ComboBox_Provider" Margin="0,0,0,10" SelectionChanged="ComboBox_Provider_SelectionChanged"/>
                            
                            <Label Content="AI名称" VerticalAlignment="Top" Margin="0,10,0,0"/>
                            <TextBox x:Name="TextBox_AiName" MaxWidth="300"/>
                            <Label Content="用户名称" VerticalAlignment="Top" Margin="0,10,0,0"/>
                            <TextBox x:Name="TextBox_UserName" MaxWidth="300"/>
                            <Label Content="角色设定" VerticalAlignment="Top" Margin="0,10,0,0"/>
                            <TextBox x:Name="TextBox_Role" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Height="120" Width="300"/>
                            
                            <Label Content="上下文控制" Margin="0,10,0,0"/>
                            <CheckBox x:Name="CheckBox_KeepContext" Content="保持聊天上下文" Margin="0,0,0,5" IsChecked="True"/>
                            <CheckBox x:Name="CheckBox_EnableChatHistory" Content="保存聊天历史" Margin="0,0,0,5" IsChecked="True"/>
                            <CheckBox x:Name="CheckBox_SeparateChatByProvider" Content="按提供商分离聊天记录" Margin="0,0,0,5" IsChecked="True"/>
                            <CheckBox x:Name="CheckBox_AutoMigrateChatHistory" Content="自动迁移聊天历史" Margin="0,0,0,5" IsChecked="True"/>
                            <WrapPanel HorizontalAlignment="Right" Margin="0,10,0,0">
                                <Button x:Name="Button_ClearContext" Content="清除上下文" Click="Button_ClearContext_Click" Margin="5"/>
                                <Button x:Name="Button_EditContext" Content="编辑上下文" Click="Button_EditContext_Click" Margin="5"/>
                            </WrapPanel>

                            <WrapPanel HorizontalAlignment="Right" Margin="0,10,0,0">
                               <Button Content="保存" Click="Button_Save_Click" Margin="5"/>
                               <Button Content="恢复默认设置" Click="Button_RestoreDefaults_Click" Margin="5"/>
                            </WrapPanel>
                            <TextBlock x:Name="TextBlock_Unsaved" Text="未保存" Foreground="Red" Visibility="Collapsed" HorizontalAlignment="Right" Margin="0,5,5,0"/>
                        </StackPanel>
                    </ScrollViewer>

                    <TabControl Grid.Column="1">
                        <TabItem Header="Ollama">
                            <StackPanel>
                                <Label Content="URL"/>
                                <TextBox x:Name="TextBox_OllamaUrl"/>
                                <Label Content="模型"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox x:Name="ComboBox_OllamaModel" Grid.Column="0" IsEditable="True"/>
                                    <Button x:Name="Button_RefreshOllamaModels" Grid.Column="1" Content="刷新" Click="Button_RefreshOllamaModels_Click" Margin="5,0,0,0"/>
                                </Grid>
                                <CheckBox x:Name="CheckBox_Ollama_EnableAdvanced" Content="启用高级配置" Margin="0,10,0,5"/>
                                <StackPanel x:Name="StackPanel_Ollama_Advanced" IsEnabled="{Binding ElementName=CheckBox_Ollama_EnableAdvanced, Path=IsChecked}">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="温度:" Width="60" VerticalAlignment="Center"/>
                                        <Slider x:Name="Slider_Ollama_Temperature" Minimum="0" Maximum="2" Width="100" Margin="5,0" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="TextBlock_Ollama_TemperatureValue" Width="30" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="最大Token:" Width="60" VerticalAlignment="Center"/>
                                        <TextBox x:Name="TextBox_Ollama_MaxTokens" Width="80" Margin="5,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="OpenAI">
                            <StackPanel>
                                <Label Content="API 密钥"/>
                                <TextBox x:Name="TextBox_OpenAIApiKey"/>
                                <Label Content="模型"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox x:Name="ComboBox_OpenAIModel" Grid.Column="0" IsEditable="True"/>
                                    <Button x:Name="Button_RefreshOpenAIModels" Grid.Column="1" Content="刷新" Click="Button_RefreshOpenAIModels_Click" Margin="5,0,0,0"/>
                                </Grid>
                                <Label Content="API 地址"/>
                                <TextBox x:Name="TextBox_OpenAIUrl"/>
                                <CheckBox x:Name="CheckBox_OpenAI_EnableAdvanced" Content="启用高级配置" Margin="0,10,0,5"/>
                                <StackPanel x:Name="StackPanel_OpenAI_Advanced" IsEnabled="{Binding ElementName=CheckBox_OpenAI_EnableAdvanced, Path=IsChecked}">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="温度:" Width="60" VerticalAlignment="Center"/>
                                        <Slider x:Name="Slider_OpenAI_Temperature" Minimum="0" Maximum="2" Width="100" Margin="5,0" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="TextBlock_OpenAI_TemperatureValue" Width="30" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="最大Token:" Width="60" VerticalAlignment="Center"/>
                                        <TextBox x:Name="TextBox_OpenAI_MaxTokens" Width="80" Margin="5,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="Gemini">
                            <StackPanel>
                                <Label Content="API 密钥"/>
                                <TextBox x:Name="TextBox_GeminiApiKey"/>
                                <Label Content="模型"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox x:Name="ComboBox_GeminiModel" Grid.Column="0" IsEditable="True"/>
                                    <Button x:Name="Button_RefreshGeminiModels" Grid.Column="1" Content="刷新" Click="Button_RefreshGeminiModels_Click" Margin="5,0,0,0"/>
                                </Grid>
                                <Label Content="API 地址"/>
                                <TextBox x:Name="TextBox_GeminiUrl"/>
                                <TextBlock Text="注意：请提供正确的 API 端点 URL。" TextWrapping="Wrap" Foreground="Gray"/>
                                <CheckBox x:Name="CheckBox_Gemini_EnableAdvanced" Content="启用高级配置" Margin="0,10,0,5"/>
                                <StackPanel x:Name="StackPanel_Gemini_Advanced" IsEnabled="{Binding ElementName=CheckBox_Gemini_EnableAdvanced, Path=IsChecked}">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="温度:" Width="60" VerticalAlignment="Center"/>
                                        <Slider x:Name="Slider_Gemini_Temperature" Minimum="0" Maximum="2" Width="100" Margin="5,0" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="TextBlock_Gemini_TemperatureValue" Width="30" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="最大Token:" Width="60" VerticalAlignment="Center"/>
                                        <TextBox x:Name="TextBox_Gemini_MaxTokens" Width="80" Margin="5,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="高级选项">
                <StackPanel>
                    <CheckBox x:Name="CheckBox_EnableAction" Content="启动智能桌面宠物" Margin="0,10,0,5" IsChecked="True">
                        <CheckBox.ToolTip>
                            <ToolTip>
                                <TextBlock Text="启用此功能会增加 Token 消耗，因为它会向 AI 发送额外的数据。"/>
                            </ToolTip>
                        </CheckBox.ToolTip>
                    </CheckBox>
                    <StackPanel Margin="20,0,0,0">
                        <CheckBox x:Name="CheckBox_EnableBuy" Content="允许宠物购买东西" IsEnabled="{Binding IsChecked, ElementName=CheckBox_EnableAction}" IsChecked="True"/>
                        <CheckBox x:Name="CheckBox_EnableState" Content="允许获取宠物状态" IsEnabled="{Binding IsChecked, ElementName=CheckBox_EnableAction}" IsChecked="True"/>
                        <CheckBox x:Name="CheckBox_EnableActionExecution" Content="允许宠物执行动作" IsEnabled="{Binding IsChecked, ElementName=CheckBox_EnableAction}" IsChecked="True"/>
                        <CheckBox x:Name="CheckBox_EnableMove" Content="允许宠物移动" IsEnabled="{Binding IsChecked, ElementName=CheckBox_EnableAction}" IsChecked="True"/>
                        <CheckBox x:Name="CheckBox_EnableTime" Content="允许获取当前时间" IsEnabled="{Binding IsChecked, ElementName=CheckBox_EnableAction}" IsChecked="True"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="工具列表">
                <!-- Content for Tools List -->
            </TabItem>
            <TabItem Header="日志">
                <GroupBox Header="日志" Margin="0,10,0,0">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5">
                            <CheckBox x:Name="CheckBox_LogAutoScroll" Content="自动滚动" Margin="0,0,10,0"/>
                            <TextBlock Text="最大日志数量:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox x:Name="TextBox_MaxLogCount" Width="60" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="Button_CopyLog" Content="复制" Click="Button_CopyLog_Click" Margin="5"/>
                            <Button x:Name="Button_ClearLog" Content="清空" Click="Button_ClearLog_Click" Margin="5"/>
                        </StackPanel>
                        <ListBox x:Name="LogBox" MinHeight="100"/>
                    </DockPanel>
                </GroupBox>
            </TabItem>
        </TabControl>
    </Grid>
</Window>