<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 主色调 -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#005A9E"/>
    
    <!-- 按钮和控件颜色 -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#F3F2F1"/>
    <SolidColorBrush x:Key="HoverBrush" Color="#F3F2F1"/>
    <SolidColorBrush x:Key="PressedBrush" Color="#EDEBE9"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="#F3F2F1"/>
    
    <!-- 文本颜色 -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#323130"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#605E5C"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#A19F9D"/>
    <SolidColorBrush x:Key="WhiteTextBrush" Color="#FFFFFF"/>
    
    <!-- 边框颜色 -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E1DFDD"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="HoverBorderBrush" Color="#C7C7C7"/>
    
    <!-- 状态颜色 -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FF8C00"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>
    
    <!-- 控件背景 -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ControlHoverBrush" Color="#F3F2F1"/>
    <SolidColorBrush x:Key="ControlPressedBrush" Color="#EDEBE9"/>
    <SolidColorBrush x:Key="ControlDisabledBrush" Color="#F3F2F1"/>
    
    <!-- 阴影效果 -->
    <DropShadowEffect x:Key="CardShadow" 
                      Color="#000000" 
                      Opacity="0.1" 
                      BlurRadius="8" 
                      ShadowDepth="2" 
                      Direction="270"/>
    
    <DropShadowEffect x:Key="ButtonShadow" 
                      Color="#000000" 
                      Opacity="0.05" 
                      BlurRadius="4" 
                      ShadowDepth="1" 
                      Direction="270"/>
</ResourceDictionary>