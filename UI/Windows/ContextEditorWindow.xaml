<Window x:Class="VPetLLM.UI.Windows.ContextEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="编辑聊天上下文" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <DataGrid x:Name="DataGrid_History" Grid.Row="0" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="角色" Binding="{Binding Role}" Width="80"/>
                <DataGridTextColumn Header="内容" Binding="{Binding Content}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="保存" Width="80" Click="Button_Save_Click" Margin="0,0,10,0"/>
            <Button Content="取消" Width="80" Click="Button_Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>