                if (_sonioxModels.Count == 0)
                {
                    MessageBox.Show("Êú™ËÉΩËé∑ÂèñÊ®°ÂûãÂàóË°®ÔºåËØ∑Ê£ÄÊü?API Key ÂíåÁΩëÁªúËøûÊé?, "ÊèêÁ§∫", MessageBoxButton.OK, MessageBoxImage.Warning);
