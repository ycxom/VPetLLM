            try
            {
                button.IsEnabled = false;
                button.Content = "Âà∑Êñ∞‰∏?..";

                // ÂÖà‰øùÂ≠òÂΩìÂâçËÆæÁΩÆ‰ª•Ëé∑ÂèñÊúÄÊñ∞ÁöÑ API Key Âí?BaseUrl
                SaveSettings();

                // ÂàõÂª∫‰∏¥Êó∂ ASR ÊúçÂä°Êù•Ëé∑ÂèñÊ®°ÂûãÂàóË°?
                var asrService = new Utils.ASRService(_plugin.Settings);
                _sonioxModels = await asrService.FetchSonioxModels();
