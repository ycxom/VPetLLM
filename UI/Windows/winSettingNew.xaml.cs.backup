        /// <summary>
        /// Ë∞ÉÂ∫¶Ëá™Âä®‰øùÂ≠òÔºàÂºÇÊ≠•ÂêàÂπ∂ÔºåÈÅøÂÖçUIÁ∫øÁ®ãÈòªÂ°û/ÈáçÂÖ•Ôº?
        /// </summary>
        /// <param name="immediate">‰øùÁïôÂèÇÊï∞ÔºåÁª¥ÊåÅÂÖºÂÆ?/param>
        private void ScheduleAutoSave(bool immediate = false)
        {
            // ÂàùÂßãÂåñÈò∂ÊÆµ‰∏ç‰øùÂ≠òÔºåÈÅøÂÖçÊú™ÊûÑÈÄ†ÂÆåÊàêÁöÑÊéß‰ª∂/ÊúçÂä°ÂØºËá¥ NRE
            if (!_isReadyToSave) return;

            lock (_saveLock)
            {
                _hasUnsavedChanges = true;
                if (_isSaveScheduled) return;
                _isSaveScheduled = true;
            }

            // ÂºÇÊ≠•ÂêàÂπ∂Âà∞‰∏ÄÊ¨°‰øùÂ≠òÔºå‰ΩøÁî®ÂêéÂè∞‰ºòÂÖàÁ∫ßÔºå‰∏çÈòªÂ°û‰∫ã‰ª∂ÂõûË∞?Â∏ÉÂ±ÄÂë®Êúü
            Dispatcher.BeginInvoke(new Action(() =>
            {
                bool doSave = false;
                lock (_saveLock)
                {
                    if (_hasUnsavedChanges)
                    {
                        _hasUnsavedChanges = false;
                        doSave = true;
                    }
                    _isSaveScheduled = false;
                }
                if (doSave)
                {
                    SaveSettings();
                }
            }), System.Windows.Threading.DispatcherPriority.Background);
        }

