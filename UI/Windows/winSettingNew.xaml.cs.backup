                        }
                    }
                }

                // Â¶ÇÊûúËøòÊòØÊ≤°ÊâæÂà∞ÔºåÈÄâÊã©Á¨¨‰∏Ä‰∏?
                if (!found && languageComboBox.Items.Count > 0)
                {
                    languageComboBox.SelectedIndex = 0;
                }

                // Ëß¶Âèë‰øùÂ≠ò
                Control_SelectionChanged(sender, e);
            }
            catch (Exception ex)
