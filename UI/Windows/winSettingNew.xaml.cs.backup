        private void Control_SelectionChanged(object sender, SelectionChangedEventArgs e)
        {
            // ÂÖàÂ§ÑÁêÜÁâπÊÆäÈÄªËæë
            if (sender == FindName("ComboBox_Language"))
            {
                // ‰øùÂ≠òÂà∞ËÆæÁΩÆÔºàÊõ¥Êñ∞ _plugin.Settings.LanguageÔº?
                SaveSettings();
                // ÈáçÊñ∞Âä†ËΩΩËØ≠Ë®ÄËµÑÊ∫ê
                LanguageHelper.ReloadLanguages();

                // Á´ãÂàªÂπøÊí≠‰∏ÄÊ¨°ÔºåXAML ‰∏?{utils:Localize} Á´ãÂç≥Êõ¥Êñ∞
                LocalizationService.Instance.ChangeLanguage(_plugin.Settings.Language);
                // ÂêåÊó∂Âà∑Êñ∞‰ª£Á†ÅÂêéÂè∞ËµãÂÄºÁöÑÊéß‰ª∂
                UpdateUIForLanguage();

                // Âú®‰∏ã‰∏ÄÂ∏ßÔºàÁ©∫Èó≤Êó∂ÔºâÂÜçÂº∫Âà∂Âà∑Êñ∞‰∏ÄÊ¨°ÔºåÁ°Æ‰øùËØ≠Ë®ÄËµÑÊ∫êÂÆåÂÖ®Â∞±‰ΩçÂêéÊâÄÊúâÊñáÊú¨ÈÉΩÊõ¥Êñ∞
                Dispatcher.BeginInvoke(new Action(() =>
                {
                    LocalizationService.Instance.Refresh();
                    UpdateUIForLanguage();
                }), System.Windows.Threading.DispatcherPriority.ContextIdle);

                // ÈáçÊñ∞ÂàùÂßãÂåñÈÉ®ÂàÜÈùûÁªëÂÆöÊàñÂ§çÊùÇÈÄªËæëÁöÑÊéß‰ª?
                InitializeTouchFeedbackSettings();
                // Âà∑Êñ∞Êèí‰ª∂ÂàóË°®‰ª•Êõ¥Êñ∞Âä®ÊÄÅÁîüÊàêÁöÑÊèèËø∞Á≠âÊñáÊú?
                Button_RefreshPlugins_Click(this, new RoutedEventArgs());
            }
            if (sender == FindName("ComboBox_PromptLanguage"))
            {
                // Á´ãÂç≥‰øùÂ≠òÊèêÁ§∫ËØçËØ≠Ë®ÄËÆæÁΩÆ
                SaveSettings();
                PromptHelper.ReloadPrompts();
            }

            // ÂØπ‰∫éÂÖ≥ÈîÆÈÖçÁΩÆÈ°πÔºå‰ΩøÁî®DispatcherÁ°Æ‰øùUIÊõ¥Êñ∞ÂÆåÊàêÂêéÂÜç‰øùÂ≠ò
            if (sender is ComboBox comboBox)
            {
                string name = comboBox.Name ?? "";
                bool isImportantConfig = name.Contains("Provider") || name.Contains("Model");

                if (isImportantConfig)
                {
                    // ‰ΩøÁî®Dispatcher.BeginInvokeÁ°Æ‰øùÂú®UIÊõ¥Êñ∞ÂÆåÊàêÂêé‰øùÂ≠?
                    Dispatcher.BeginInvoke(new Action(() =>
                    {
                        SaveSettings();
                    }), System.Windows.Threading.DispatcherPriority.Background);
                }
                else
                {
                    ScheduleAutoSave();
                }
            }
            else
            {
                ScheduleAutoSave();
            }
        }

