<Window x:Class="VPetLLM.UI.Windows.winScreenshotEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:utils="clr-namespace:VPetLLM.Utils"
        Title="{utils:Localize KeyPath=Screenshot.Editor.Title, Default=Screenshot Editor}"
        Height="500" Width="600"
        MinHeight="400" MinWidth="500"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1084D8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#006CBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4D4D4D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Image Preview -->
        <Border Grid.Row="0" 
                Background="#2D2D2D" 
                CornerRadius="8"
                Margin="0,0,0,12">
            <Grid>
                <Image x:Name="ImagePreview" 
                       Stretch="Uniform"
                       Margin="8"/>
                <Button x:Name="ButtonRemoveImage"
                        Content="âœ•"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="8"
                        Width="28" Height="28"
                        FontSize="14"
                        Background="#E81123"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="{utils:Localize KeyPath=Screenshot.Editor.RemoveImage, Default=Remove Image}"
                        Click="ButtonRemoveImage_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="14">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F1707A"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
        
        <!-- Prompt Input -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <TextBox x:Name="TextBoxPrompt"
                     Style="{StaticResource ModernTextBox}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="80"
                     VerticalScrollBarVisibility="Auto"
                     Text="{utils:Localize KeyPath=Screenshot.Editor.DefaultPrompt, Default=Please describe what you see in this image.}"/>
            <TextBlock x:Name="PlaceholderText"
                       Text="{utils:Localize KeyPath=Screenshot.Editor.PromptPlaceholder, Default=Enter your question about the image...}"
                       Foreground="#808080"
                       FontSize="14"
                       Margin="10,8,0,0"
                       IsHitTestVisible="False"
                       Visibility="Collapsed"/>
        </Grid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="ButtonCancel"
                    Content="{utils:Localize KeyPath=Screenshot.Editor.Cancel, Default=Cancel}"
                    Style="{StaticResource SecondaryButton}"
                    Margin="0,0,8,0"
                    Click="ButtonCancel_Click"/>
            <Button x:Name="ButtonSend"
                    Content="{utils:Localize KeyPath=Screenshot.Editor.Send, Default=Send}"
                    Style="{StaticResource ModernButton}"
                    Click="ButtonSend_Click"/>
        </StackPanel>
    </Grid>
</Window>
