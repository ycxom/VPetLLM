<Window x:Class="VPetLLM.UI.Windows.winContextEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VPetLLM"
        mc:Ignorable="d"
        Title="上下文编辑器" Height="450" Width="800">
   <Grid Margin="10">
       <Grid.RowDefinitions>
           <RowDefinition Height="*" />
           <RowDefinition Height="Auto" />
       </Grid.RowDefinitions>
       <DataGrid Grid.Row="0" AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding DisplayHistory}" x:Name="DataGrid_Context">
           <DataGrid.Columns>
               <DataGridTextColumn Header="角色" Binding="{Binding Role}" Width="Auto" IsReadOnly="True" x:Name="Column_Role"/>
               <DataGridTextColumn Header="内容" Binding="{Binding Content}" Width="*" x:Name="Column_Content"/>
           </DataGrid.Columns>
       </DataGrid>
       <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
           <Button x:Name="Button_Add" Content="添加行" Click="Button_Add_Click" Margin="5"/>
           <Button x:Name="Button_Delete" Content="删除行" Click="Button_Delete_Click" Margin="5"/>
            <Button x:Name="Button_Save" Content="保存" Click="Button_Save_Click" Margin="5"/>
            <Button x:Name="Button_Cancel" Content="取消" Click="Button_Cancel_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
